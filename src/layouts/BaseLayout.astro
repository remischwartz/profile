---
import ContactLink from "../components/ContactLink.astro";
import Navbar from "../components/Navbar.astro";
import NavbarItem from "../components/NavbarItem.astro";
import "../styles/global.css";
const { pageTitle, pageId } = Astro.props;
---

<!doctype html>
<html lang="fr" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" as="image" href=`${import.meta.env.BASE_URL}/cookie.png` />
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
    <!-- Primary Meta Tags -->
    <title>Rémi Schwartz | Portfolio</title>
    <meta name="title" content={pageTitle} />
    <meta
      name="description"
      content="Développeur Frontend Senior : Typescript, React, Accessibilité"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://remischwartz.github.io/profile/" />
    <meta property="og:title" content={pageTitle} />
    <meta
      property="og:description"
      content="Développeur Frontend Senior : Typescript, React, Accessibilité"
    />
    <meta
      property="og:image"
      content="https://remischwartz.github.io/profile/code.png"
    />

    <!-- X (Twitter) -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta
      property="twitter:url"
      content="https://remischwartz.github.io/profile/"
    />
    <meta property="twitter:title" content={pageTitle} />
    <meta
      property="twitter:description"
      content="Développeur Frontend Senior : Typescript, React, Accessibilité"
    />
    <meta
      property="twitter:image"
      content="https://remischwartz.github.io/profile/code.png"
    />
  </head>
  <body class="bg-background text-sand-200 font-sans scroll-smooth" id={pageId}>
    <Navbar>
      <NavbarItem content="Accueil" href=`${import.meta.env.BASE_URL}#top` />
      <NavbarItem
        content="Compétences"
        href=`${import.meta.env.BASE_URL}#competences`
      />
      <NavbarItem
        content="À propos"
        href=`
        ${import.meta.env.BASE_URL}#about`
      />
      <NavbarItem
        content="Projets"
        href=`
        ${import.meta.env.BASE_URL}#projects`
      />
      <!-- <NavbarItem
        content="Blog"
        href=`
        ${import.meta.env.BASE_URL}/blog`
      /> -->
      <ContactLink size="small" />
    </Navbar>
    <main class="md:text-lg">
      <slot />
    </main>
    <script>
      const sections = document.querySelectorAll("section[id]");
      const navLinks = document.querySelectorAll(".nav-link");

      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            const id = entry.target.getAttribute("id");
            const link = document.querySelector(
              `a[href='${import.meta.env.BASE_URL}#${id}']`
            );
            if (entry.isIntersecting) {
              navLinks.forEach((el) => el.classList.remove("current-link"));
              if (link) link.classList.add("current-link");
            }
          });
        },
        { rootMargin: "0px 0px -90% 0px" }
      );

      sections.forEach((section) => observer.observe(section));
    </script>
  </body>
</html>
